{
    "name": "config-per-os",
    "displayName": "Config Per OS",
    "description": "Set config (e.g. font size) depending on the operating system",
    "version": "0.0.1",
    "publisher": "ignorantshr",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ignorantshr/vscode-config-per-os"
    },
    "contributes": {
        "configuration": {
            "title": "Editor Font Size",
            "properties": {
                "config-per-os.FontSizeWindows": {
                    "type": "integer",
                    "default": 18,
                    "description": "Font size for Windows."
                },
                "config-per-os.FontSizeMacOS": {
                    "type": "integer",
                    "default": 16,
                    "description": "Font size for MacOS."
                },
                "config-per-os.FontSizeLinux": {
                    "type": "integer",
                    "default": 18,
                    "description": "Font size for Linux."
                }
            }
        }
    },
    "main": "./extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/node": "^12.20.4",
        "@types/mocha": "^8.2.2",
        "typescript": "^4.2.4",
        "vscode": "^1.1.37",
        "tslint": "^5.0.0",
        "mocha": "^8.2.1",
        "eslint": "^7.22.0"
    }
}